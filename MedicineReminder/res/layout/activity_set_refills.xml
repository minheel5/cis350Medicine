<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Set Refills" >

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
  	  	android:layout_height="wrap_content"
    > 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="When is your next refill" />
    
    <Button android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="+"
        android:onClick="onPlusButtonClick" 
        />
    
    </LinearLayout>
    
    <Spinner
	    android:id="@+id/time"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />
    
    <Button android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:onClick="onClearButtonClick" 
        />
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >
         
    <Button android:id="@+id/apptcalendar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Refill Calendar"
        android:layout_gravity="center_horizontal|center"
        android:onClick="onCalButtonClick" 
        />
    
    <Button android:id="@+id/cont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_gravity="center_horizontal|center"
        android:onClick="onRefillContinueButtonClick" 
        />
    
    </LinearLayout>

</LinearLayout>