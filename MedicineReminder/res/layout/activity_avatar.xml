<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity" >

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Edit" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select Avatar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="18dp"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        android:onClick="onAvatarImage1ButtonClick"
        android:src="@drawable/avatar1" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_centerHorizontal="true"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        android:onClick="onAvatarImage2ButtonClick"
        android:src="@drawable/avatar2" />

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button1"
        android:layout_toRightOf="@+id/ImageButton02"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        android:onClick="onAvatarImage3ButtonClick"
        android:src="@drawable/avatar3" />

    <ImageButton
        android:id="@+id/ImageButton03"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_below="@+id/imageButton1"
        android:layout_marginTop="24dp"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        android:onClick="onAvatarImage4ButtonClick"
        android:src="@drawable/avatar4" />

    <ImageButton
        android:id="@+id/ImageButton06"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/ImageButton03"
        android:layout_toLeftOf="@+id/ImageButton01"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        android:onClick="onAvatarImage5ButtonClick"
        android:src="@drawable/avatar5" />

    <ImageButton
        android:id="@+id/ImageButton05"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/ImageButton01"
        android:layout_alignTop="@+id/ImageButton06"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        android:onClick="onAvatarImage6ButtonClick"
        android:src="@drawable/avatar6" />

    <ImageButton
        android:id="@+id/ImageButton04"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/ImageButton03"
        android:layout_below="@+id/ImageButton03"
        android:layout_marginTop="21dp"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        android:onClick="onAvatarImage7ButtonClick"
        android:src="@drawable/avatar7" />

    <ImageButton
        android:id="@+id/ImageButton08"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/ImageButton04"
        android:layout_toLeftOf="@+id/ImageButton05"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        android:onClick="onAvatarImage8ButtonClick"
        android:src="@drawable/avatar8" />

    <ImageButton
        android:id="@+id/ImageButton07"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/ImageButton05"
        android:layout_alignTop="@+id/ImageButton08"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        android:onClick="onAvatarImage9ButtonClick"
        android:src="@drawable/avatar9" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ImageButton04"
        android:layout_marginTop="16dp"
        android:text="Continue"
        android:onClick="onAvatarContinueButtonClick"
        android:width="500dp" />

</RelativeLayout>