<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/MEDCHECK"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:gravity="clip_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="176dp"
            android:layout_height="230dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            android:src="@drawable/homescreen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="253dp"
            android:layout_gravity="right"
            android:text="Welcome to MedCheck. This application will allow you to keep an eye on your medicine and give you reminders for when you need to take them."
            android:textSize="15sp" />

    </LinearLayout>
	    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="vertical" >
    
	    <Button android:id="@+id/signup"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Signup"
	        android:layout_gravity="center_horizontal|center"
	        android:onClick="onTSUpContinueButtonClick" 
	        />
	    
	    <Button android:id="@+id/takemeds"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Take Meds"
	        android:layout_gravity="center_horizontal|center"
	        android:onClick="onTTMContinueButtonClick" 
	        />
    
	</LinearLayout>
</LinearLayout>